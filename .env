ENABLE_WEBSOCKET_UPDATES=false
ENABLE_POST_PROCESSING=true

# Monitoring
HEALTH_CHECK_INTERVAL=30000
PERFORMANCE_LOG_INTERVAL=60000

# Post-Processing Configuration
