RECORDING_WEBHOOK_URL=https://public-app.voiceerp.com/recording-complete
GOOGLE_APPLICATION_CREDENTIALS=/opt/credentials/google-speech-key.json
POST_PROCESSING_QUEUE_DELAY=30
BATCH_STT_MODEL=phone_call
BATCH_STT_ENHANCED=true
SPEAKER_DIARIZATION=true
MAX_SPEAKERS=4
AUDIO_SAMPLE_RATE=8000
AUDIO_ENCODING=LINEAR16
LANGUAGE_CODE=bn-BD
ALTERNATIVE_LANGUAGES=bn-IN,en-US
