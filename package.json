{
  "name": "voiceerp-transcript-listener",
  "version": "1.0.0",
  "description": "Real-time transcript capture service for VoiceERP using FreeSWITCH Event Socket",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest",
    "health": "curl -f http://localhost:3012/health || exit 1",
    "test-both": "node test-both-transcriptions.js",
    "test-recording": "curl -X POST http://localhost:3012/webhooks/test-recording -H 'Content-Type: application/json' -d '{\"call_sid\":\"test-call-123\"}'",
    "db-init": "mysql -h localhost -P 3360 -u root < ../infrastructure/mysql/transcript_tables_complete.sql"
  },
  "keywords": [
    "voiceerp",
    "transcript",
    "freeswitch",
    "event-socket",
    "real-time",
    "bengali",
    "stt",
    "tts"
  ],
  "author": "VoiceERP Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "modesl": "^1.1.8",
    "mysql2": "^3.6.5",
    "bull": "^4.12.2",
    "redis": "^4.6.10",
    "@google-cloud/speech": "^6.0.1",
    "ws": "^8.14.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "compression": "^1.7.4",
    "pino": "^8.16.2",
    "pino-pretty": "^10.2.3",
    "dotenv": "^16.3.1",
    "joi": "^17.11.0",
    "uuid": "^9.0.1",
    "moment": "^2.29.4",
    "lodash": "^4.17.21",
    "axios": "^1.6.7"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "@types/node": "^20.9.0"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/luminouslabsbd/voiceerp-prod.git"
  },
  "bugs": {
    "url": "https://github.com/luminouslabsbd/voiceerp-prod/issues"
  },
